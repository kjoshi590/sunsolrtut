<div class="container players-search-container">
<div class="row">
  <%= render 'search/search_form' %>
</div>


<% unless @players.nil?  %>

      <div class="row">
      <div class="col-xs-3">
        <h3>Browse by Position</h3>
          <% for row in @search.facet(:position).rows -%>
              <input type="checkbox" class="facet-check-box" name="position" value="<%= row.value %>" <%= params[:position] == row.value ? "checked" : "" %>> <%= row.value %> (<%= row.count %>)
          <% end -%>
      </div>
      <div class="col-xs-9  player-search-results-container">
        <% if @players.count > 0 %>
            <h4> <%= @total %> total players found.</h4>
            <h3>These are the search results:</h3>
            <% @players.each do |player| %>
                <div class="list-group">
                  <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading"><%= player.name %></h4>
                    <p class="list-group-item-text"><%= player.club_name %></p>
                  </a>
                </div>
            <% end %>
        <% else %>
            <h3>No results found.</h3>
        <% end %>
      </div>

    </div>

<% end %>
</div>

<script>
    $(document).ready(function () {
        new SOLR.SearchPage($(".players-search-container"));
    })
</script>

