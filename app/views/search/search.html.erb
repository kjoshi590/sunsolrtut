<div class="row">
<%= render 'search/search_form' %>
</div>


<% unless @players.nil?  %>
    <% if @players.count > 0 %>
    <h3>These are the search results:</h3>
    <% @players.each do |player| %>

            <div class="list-group">
              <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading"><%= player.name %></h4>
                <p class="list-group-item-text"><%= player.club_name %></p>
              </a>
            </div>

    <% end %>
    <% else %>
        <h3>No results found.</h3>
        <% end %>
<% end %>

